<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.windsurfing.security.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.windsurfing.security.entity.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="phone" property="phone"/>
        <result column="phone_digest" property="phoneDigest"/>
        <result column="id_card" property="idCard"/>
        <result column="id_card_digest" property="idCardDigest"/>
        <result column="email" property="email"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 根据手机号摘要查询用户 -->
    <select id="selectByPhoneDigest" resultMap="BaseResultMap">
        SELECT *
        FROM users
        WHERE phone_digest = #{phoneDigest}
    </select>

    <!-- 根据身份证号摘要查询用户 -->
    <select id="selectByIdCardDigest" resultMap="BaseResultMap">
        SELECT *
        FROM users
        WHERE id_card_digest = #{idCardDigest}
    </select>

</mapper>
